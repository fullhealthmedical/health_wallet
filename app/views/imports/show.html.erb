<!DOCTYPE html>
<html>
  <head>
    <title>Import Status</title>
    <% if @imported_file.status == 'processing' || @imported_file.status == 'pending' %>
      <meta http-equiv="refresh" content="3">
    <% end %>
  </head>
  <body>
    <h1>Import Status</h1>

    <div style="margin-bottom: 20px;">
      <p><strong>Status:</strong> 
        <span style="color: <%= status_color(@imported_file.status) %>; font-weight: bold;">
          <%= @imported_file.status.upcase %>
        </span>
      </p>
      <p><strong>File:</strong> <%= @imported_file.filename %></p>
      <p><strong>Uploaded:</strong> <%= @imported_file.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
    </div>

    <% if @imported_file.status == 'processing' || @imported_file.status == 'pending' %>
      <div style="padding: 15px; background-color: #fff3cd; border: 1px solid #ffc107; border-radius: 5px; margin-bottom: 20px;">
        <p>Import is <%= @imported_file.status %>... This page will refresh automatically.</p>
      </div>
    <% end %>

    <% if @imported_file.status == 'completed' %>
      <div style="padding: 15px; background-color: #d4edda; border: 1px solid #28a745; border-radius: 5px; margin-bottom: 20px;">
        <h3>Import Summary</h3>
        <table>
          <tr>
            <td><strong>Patients Created:</strong></td>
            <td><%= @imported_file.patients_created_count %></td>
          </tr>
          <tr>
            <td><strong>Patients Updated:</strong></td>
            <td><%= @imported_file.patients_updated_count %></td>
          </tr>
          <tr>
            <td><strong>Assessments Created:</strong></td>
            <td><%= @imported_file.assessments_created_count %></td>
          </tr>
          <tr>
            <td><strong>Assessments Updated:</strong></td>
            <td><%= @imported_file.assessments_updated_count %></td>
          </tr>
          <tr>
            <td><strong>Observations Created:</strong></td>
            <td><%= @imported_file.observations_created_count %></td>
          </tr>
          <tr>
            <td><strong>Observations Updated:</strong></td>
            <td><%= @imported_file.observations_updated_count %></td>
          </tr>
          <tr>
            <td><strong>Total Created:</strong></td>
            <td><%= @imported_file.total_created %></td>
          </tr>
          <tr>
            <td><strong>Total Updated:</strong></td>
            <td><%= @imported_file.total_updated %></td>
          </tr>
        </table>
      </div>
    <% end %>

    <% if @imported_file.status == 'failed' %>
      <div style="padding: 15px; background-color: #f8d7da; border: 1px solid #dc3545; border-radius: 5px; margin-bottom: 20px;">
        <h3>Import Failed</h3>
        <p>The import encountered errors and could not be completed.</p>
      </div>
    <% end %>

    <% if @imported_file.error_count > 0 %>
      <div style="margin-bottom: 20px;">
        <h3>Errors (<%= @imported_file.error_count %>)</h3>
        <div style="max-height: 300px; overflow-y: auto; padding: 10px; background-color: #f8f9fa; border: 1px solid #dee2e6; border-radius: 5px;">
          <ul>
            <% @imported_file.error_messages.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div style="margin-top: 20px;">
      <%= link_to "Back to Imports", imports_path %>
      <% if @imported_file.assessment %>
        | <%= link_to "View Assessment", assessment_path(@imported_file.assessment) %>
      <% end %>
      | <%= link_to "Import Another File", new_import_path %>
    </div>
  </body>
</html>

<% def status_color(status)
  case status
  when 'pending' then '#6c757d'
  when 'processing' then '#ffc107'
  when 'completed' then '#28a745'
  when 'failed' then '#dc3545'
  else '#6c757d'
  end
end %>
